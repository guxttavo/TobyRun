@{
    var cookie = Context.Request.Cookies["DataInfraAuthentication"];
    var UsuarioLogado = Web.Configurations.Extensions.CookieExtensions.SerializarToken(cookie);
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DataInfra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" />
    <link rel="stylesheet" href="~/css/Pages/graficos.css" asp-append-version="true" />

</head>

<body>
    <main id="main">
        <aside id="menu-lateral">
            <div>
                <div class="row barra-lateral">
                    <div>
                        <a class="titulo-principal" asp-controller="Home" asp-action="Index">DataInfra</a>
                        <h3 class="bem-vindo">Bem vindo, @UsuarioLogado.Nome</h3>
                        <ul class="opcoes">
                            <li class="opcoes-lista" >
                                <a asp-controller="Usuario" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">group</span>
                                    Usuários
                                </a>
                            </li>
                             <li class="opcoes-lista">
                                <a asp-controller="Grafico" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">monitoring</span>
                                    Ver Gráficos
                                </a>
                            </li>
                            <li class="opcoes-lista">
                                <a asp-controller="Denuncia" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined"> report </span>
                                    Realize uma Denúncia
                                </a>
                            </li>
                            @* <li class="opcoes-lista">
                                <a asp-controller="Suporte" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">add_location_alt</span>
                                    Sugira Melhorias
                                </a>
                            </li> *@
                            <li class="opcoes-lista">
                                <a asp-controller="Suporte" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">help</span>
                                    Suporte
                                </a>
                            </li>
                        </ul>
                    </div>
                    <a asp-controller="Login" asp-action="Logout" class="botao-sair">
                        <span class="material-symbols-outlined">
                            logout
                        </span>
                        Sair
                    </a>
                </div>
            </div>
        </aside>
        <section id="corpo">
            @RenderBody()
        </section>
    </main>
</body>

<script src="~/js/Pages/graficos.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>
