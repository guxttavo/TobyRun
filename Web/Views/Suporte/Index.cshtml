@model Suporte

<header>
    <link rel="stylesheet" href="~/css/Pages/suporte.css" asp-append-version="true" />
</header>
<div class="container-geral">
    <h1 class="titulo-geral ">Contate o suporte</h1>
</div>

<div class="container-cadastrar">
    <h1 class="titulo-form">Suporte</h1>
    <div class="cor-de-fundo-suporte">
        <div class="container mt-5">
            <form id="suporteForm">
                <div class="row">
                    <div class="mb-3 col-md-12">
                        <label for="nome" class="form-label">Assunto</label>
                        <input type="text" class="form-control" asp-for="Assunto" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea">Descrição</label>
                        <textarea class="form-control" asp-for="Descricao" rows="8"></textarea>
                    </div>
                </div>
                <div class="ajuste-botoes">
                    <button type="submit" class="btn-enviar-suporte btn btn-dark"
                        onclick="suporte.realizarSuporte()">Enviar</button>
                    <a class="btn btn-dark" asp-controller="Usuario" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/Pages/suporte.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

<script>
    suporte.init({
        urls: {
            realizarSuporte: '@Url.Action("RealizarSuporte", "Suporte")',
            viewHome: '@Url.Action("Index", "home")'
        }
    });
</script>